{
    "compilerOptions": {
        "target": "es2017",
        "module": "NodeNext",
        "rootDir": "./src",
        "moduleResolution": "nodenext",
        "resolvePackageJsonExports": true,
        "resolvePackageJsonImports": true,
        "resolveJsonModule": true,
        "outDir": "./build",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    }
}